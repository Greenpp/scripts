#!/bin/bash

state=$( amixer get Master | grep -o "\[[onf]*\]" )

if [[ $state == "[on]" ]]; then
    amixer set Master mute
    pkill -SIGRTMIN+8 i3blocks
    alsactl -f $HOME/.alsa_state store
elif [[ $state == "[off]" ]]; then
    amixer set Master unmute
    amixer set Speaker unmute
    pkill -SIGRTMIN+8 i3blocks
    alsactl -f $HOME/.alsa_state store
fi

